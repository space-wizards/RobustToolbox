<?xml version="1.0" encoding="utf-8"?>

<EntityTemplates>
  <EntityTemplate name="Locker">
    <Components>
      <Component name="TransformComponent"></Component>
      <Component name="VelocityComponent"></Component>
      <Component name="DirectionComponent"></Component>
      <Component name="ClickableComponent"></Component>
      <Component name="SpriteComponent"></Component>
      <Component name="BasicInteractableComponent"></Component>
      <Component name="BasicMoverComponent"></Component>
      <Component name="CollidableComponent"></Component>
      <Component name="Physics">
        <Parameters>
          <Parameter name="Mass" type="float" value="5" />
        </Parameters>
      </Component>
      <Component name="BasicDoorComponent">
        <Parameters>
          <Parameter name="OpenSprite" type="string" value="locker_open" />
          <Parameter name="ClosedSprite" type="string" value="locker_closed" />
          <Parameter name="OpenOnBump" type="bool" value="false" />
          <Parameter name="AutoCloseInterval" type="int" value="0" />
        </Parameters>
      </Component>
    </Components>
  </EntityTemplate>
</EntityTemplates>